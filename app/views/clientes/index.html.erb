<h1>Listing clientes</h1>

<table>
  <thead>
    <tr>
      <th>Id cliente</th>
      <th>Nombre cliente</th>
      <th>Apellido cliente</th>
      <th>Rut cliente</th>
      <th>Correo cliente</th>
      <th>Direccion cliente</th>
      <th>Telefono cliente</th>
      <th>Estado cliente</th>
      <th>Password cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.id_cliente %></td>
        <td><%= cliente.nombre_cliente %></td>
        <td><%= cliente.apellido_cliente %></td>
        <td><%= cliente.rut_cliente %></td>
        <td><%= cliente.correo_cliente %></td>
        <td><%= cliente.direccion_cliente %></td>
        <td><%= cliente.telefono_cliente %></td>
        <td><%= cliente.estado_cliente %></td>
        <td><%= cliente.password_cliente %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


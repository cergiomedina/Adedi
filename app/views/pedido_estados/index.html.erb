<h1>Listing pedido_estados</h1>

<table>
  <thead>
    <tr>
      <th>Id est pedido</th>
      <th>Est pedido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedido_estados.each do |pedido_estado| %>
      <tr>
        <td><%= pedido_estado.id_est_pedido %></td>
        <td><%= pedido_estado.est_pedido %></td>
        <td><%= link_to 'Show', pedido_estado %></td>
        <td><%= link_to 'Edit', edit_pedido_estado_path(pedido_estado) %></td>
        <td><%= link_to 'Destroy', pedido_estado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


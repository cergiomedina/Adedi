<h1>Listing disfrazs</h1>

<table>
  <thead>
    <tr>
      <th>Id disfraz</th>
      <th>Categoria disfraz</th>
      <th>Stock disfraz</th>
      <th>Stock disponible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disfrazs.each do |disfraz| %>
      <tr>
        <td><%= disfraz.id_disfraz %></td>
        <td><%= disfraz.categoria_disfraz %></td>
        <td><%= disfraz.stock_disfraz %></td>
        <td><%= disfraz.stock_disponible %></td>
        <td><%= link_to 'Show', disfraz %></td>
        <td><%= link_to 'Edit', edit_disfraz_path(disfraz) %></td>
        <td><%= link_to 'Destroy', disfraz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

